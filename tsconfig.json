{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "module": "ES2015",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"],
      "@images/*": ["./src/assets/images/*"],
      "@styles/*": ["./src/assets/scss/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./src/**/*", "./typings"]
}
